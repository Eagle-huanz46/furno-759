<!--define the object to be article when used the errors-->
<%= render 'sharedElements/errors', object: @article %>

<div class="row">
	<div class="col-xs-12">
		<%#= form_for @article do |f| %>
		<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class="form-group">
		    <div class="col-sm-2 control-label">
		    <%= f.label :title %>
		    </div>
		    <div class="col-sm-8">
		    <%= f.text_field :title, class:"form-control", placeholder:"Title...", autofocus:true %>
		    </div>
		</div>
		 
		 <div class="form-group">
		    <div class="col-sm-2 control-label">
		    <%= f.label :description %>
		    </div>
		    <div class="col-sm-8">
		    <%= f.text_area :description, class:"form-control", placeholder:"Description...", rows:10 %>
		    </div>
		</div>

		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-8">
			<!--collection_check_boxes(object, collection, value_method, text_method), :id and :name correspond to html id and name-->
		    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name do |cb| %>
		       <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
		    <% end %>
		    </div>
		</div>

		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
		    <%= f.submit class: "btn btn-primary btn-lg" %>
		    </div>
		    <!--submit cannot add , before class-->
		</div>
		<% end %>

		<div class="col-sm-4 col-xs-offset-6">
		[ <%= link_to "Cancel", articles_path %> ]
		</div>
	</div>
</div>

