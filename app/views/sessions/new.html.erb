<h1 align="center">FUNRO User Login</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
<!--session is temporatory, create and then get rid of it, not hit the database, the url is used to POST, means to go to the "create"-->
	 
	 <div class="form-group">
	    <div class="col-sm-2 control-label">
	    <%= f.label :email %>
	    </div>
	    <div class="col-sm-8">
	    <%= f.email_field :email, class:"form-control", placeholder:"Email..." %>
	    </div>
	</div>

	<div class="form-group">
	    <div class="col-sm-2 control-label">
	    <%= f.label :password %>
	    </div>
	    <div class="col-sm-8">
	    <%= f.password_field :password, class:"form-control", autocomplete: "off" %>
	    </div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
	    <%= f.submit "Login", class: 'btn btn-primary btn-lg' %>
	    </div>
	</div>
	<% end %>

	<div class="col-sm-4 col-xs-offset-6">
	[ <%= link_to "Cancel", articles_path %> ]
	</div>