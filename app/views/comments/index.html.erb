<h1 align="center">All Comments Made by <%= current_user.username %></h1>
<div align="center">
	<%= will_paginate %>
	<% @comments.each do |comment| %>
	<ul class="listing">
	   <div class="row">
	      <div class="well col-md-4 col-md-offset-4">
	           <li><h4><%= comment.context %></h4></li>
	           <li>Updated <%= time_ago_in_words(comment.updated_at) %> ago</li>
	           <li>Created at <strong><%= link_to "Here", article_path(comment.article_id) %></strong> on <%= comment.created_at.strftime("%d/%m/%Y") %></li>
	      </div>
	   </div>
	</ul>
	
	<% end %>
	<%= will_paginate %>
</div>