<h1 align="center">All Tags</h1>
<div class="center">
	<%= will_paginate %>
	<% @tags.each do |tag| %>
	   <ul class="listing">
		   <div class="row">
		      <div class="well col-md-4 col-md-offset-4">
		           <li class="tag-name"><%= link_to "#{tag.name}", tag_path(tag) %></li>
		           <li><small><%= pluralize(tag.articles.count, "article") %></small></li>
		      </div>
		   </div>
		</ul>
	<% end %>
	<%= will_paginate %>
</div>