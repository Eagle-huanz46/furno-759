<%= render 'sharedElements/errors', object: @tag %>
<%= form_for(@tag, :html => {class: "form-horizontal", role: "form"}) do |f| %>
	<div class="form-group">
	    <div class="col-sm-2 control-label">
	    <%= f.label :name %>
	    </div>
	    <div class="col-sm-8">
	    <%= f.text_field :name, class:"form-control", placeholder:"Tag Name...", autofocus:true %>
	    </div>
	</div>
	 
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
	    <%= f.submit(@tag.new_record? ? "Create Tag" : "Update Tag", class: 'btn btn-primary btn-lg') %>
	    </div>
	</div>
<% end %>

	<div class="col-sm-4 col-xs-offset-6">
	[ <%= link_to "Cancel", tags_path %> ]
	</div>
